<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contact List</h2>
      <a href="/contact/add" class="btn btn-primary mb-2">Add Data</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success" role="alert"><%= msg %></div>
      <% } %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">No HP</th>
            <th scope="col">Nickname</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="6">
              <div class="alert alert-danger" role="alert">
                contact data is still empty
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact,i) => {i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.name %></td>
            <td><%= contact.nohp %></td>
            <td><%= contact.nickname %></td>
            <td><%= contact.email %></td>
            <td>
              <a
                href="/contact/<%= contact.name %>"
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-square"></i> Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
